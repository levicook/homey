# .bash_profile
type -t prompt_func || source ${HOME}/.bashrc

set -o vi

export EDITOR=/usr/bin/vim
export VISUAL=/usr/bin/vim

if [ -d ~/phonegap/phonegap-android/bin ]; then
  export PATH=~/phonegap/phonegap-android/bin:$PATH
fi

if [ -d /usr/local/lib/node ]; then
  export NODE_PATH=/usr/local/lib/node
fi

if [ -d /usr/local/share/npm/bin ]; then
  export PATH=/usr/local/share/npm/bin:$PATH
fi

if [ -d /usr/local/sbin ]; then
  export PATH=/usr/local/sbin:$PATH
fi

if [ -d ${HOME}/homey ]; then
  export HOMEY=${HOME}/homey
  export PATH=${HOMEY}:$PATH
fi

if [ -d ${HOME}/bin ]; then
  export PATH=$HOME/bin:$PATH
fi

PROMPT_COMMAND=prompt_func

if [ -f /usr/local/etc/bash_completion ]; then
  source /usr/local/etc/bash_completion
fi

if [ -f ${HOME}/.bash_profile.local ]; then
  source ${HOME}/.bash_profile.local
fi
